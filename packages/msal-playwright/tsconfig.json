{
  "compilerOptions": {
    "target": "es5",
    "module": "ES6",
    "lib": ["DOM", "ESNext"],
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
